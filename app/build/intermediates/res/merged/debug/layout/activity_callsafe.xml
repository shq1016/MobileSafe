<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/title_style"
                    android:text="黑名单管理"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/bt_blacknumber_add"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#3fff"
                    android:text="添加"
                    android:textColor="#8fff" />
            </RelativeLayout>

            <ListView
                android:id="@+id/lv_blacknumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_black_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_loading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="努力加载中。。。"
                android:textColor="#bfff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <SlidingDrawer
                android:id="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:content="@+id/mycontent"
                android:handle="@+id/myhandle"
                android:orientation="vertical" >

                <ImageView
                    android:id="@id/myhandle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_button_pull_down" />

                <LinearLayout
                    android:id="@id/mycontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <GridView
                        android:id="@+id/gv_home2_low"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/widget_bg_switch"
                        android:numColumns="4" />
                </LinearLayout>
            </SlidingDrawer>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>