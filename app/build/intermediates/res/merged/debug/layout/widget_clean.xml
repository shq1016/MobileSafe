<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="1.0dip" >


    <LinearLayout
        android:id="@+id/task_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_weight="1.0"
        android:background="@drawable/widget_task_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/task_items_line_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/memory_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widget_task_items"
                android:padding="1.0dip"
                android:text="@string/percentage_of_memory_used"
                android:textColor="#ff555555"
                android:textSize="12.0dip" />

            <TextView
                android:id="@+id/used_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widget_task_items"
                android:padding="1.0dip"
                android:textColor="#ff555555"
                android:textSize="20.0dip" />

            <TextView
                android:id="@+id/used_num_percent"
                android:layout_width="42.0dip"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_widget_task_items"
                android:padding="1.0dip"
                android:text="@string/BAI_FEN_HAO"
                android:textColor="#ff555555"
                android:textSize="14.0dip" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/rom_progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="15.0dip"
            android:layout_marginLeft="2.0dip"
            android:layout_marginRight="3.0dip"
            android:progressDrawable="@drawable/progressbar_style_blue" />

        <LinearLayout
            android:id="@+id/task_items_line_bottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/process_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:padding="1.0dip"
                android:textColor="#ff898989"
                android:textSize="11.0dip" />

            <TextView
                android:id="@+id/memory_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1.0dip"
                android:textColor="#ff898989"
                android:textSize="11.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/task_items"
        android:layout_toRightOf="@id/task_items"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/kill_all"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/widget_button" />
    </LinearLayout>

</LinearLayout>