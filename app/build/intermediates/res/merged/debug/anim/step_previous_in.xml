<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" >

    <translate
        android:duration="500"
        android:fromXDelta="-100%p"
        android:toXDelta="0" />

    <scale
        android:duration="500"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="160"
        android:pivotY="240"
        android:toXScale="1"
        android:toYScale="1" />

    <alpha
        android:duration="500"
        android:fromAlpha="0.2"
        android:toAlpha="1" />

</set>