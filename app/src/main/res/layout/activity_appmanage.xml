<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="@style/title_style"
                android:text="软件管理"
                android:textColor="#fff" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_app_rom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="内存可用"
                    android:textColor="#bfff" />

                <TextView
                    android:id="@+id/tv_app_sd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="sd卡可用"
                    android:textColor="#bfff" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/lv_app"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

                <TextView
                    android:id="@+id/tv_app_topinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#660044FF"
                    android:textColor="#bfff" />
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_app_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="invisible" >

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_loading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="努力加载中。。。"
                android:textColor="#8fff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <SlidingDrawer
                android:id="@+id/sd"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:content="@+id/mycontent"
                android:handle="@+id/myhandle"
                android:orientation="vertical" >

                <ImageView
                    android:id="@id/myhandle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_button_pull_down" />

                <LinearLayout
                    android:id="@id/mycontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <GridView
                        android:id="@+id/gv_home2_low"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/widget_bg_switch"
                        android:numColumns="4" />
                </LinearLayout>
            </SlidingDrawer>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>